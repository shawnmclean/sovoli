{
  "name": "@sovoli/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "migrate": "pnpm with-env tsx ./src/migrate/index.ts",
    "generate": "pnpm with-env drizzle-kit generate --dialect=postgresql",
    "push": "pnpm with-env drizzle-kit push",
    "seed": "pnpm with-env tsx ./src/seed/index.ts",
    "studio": "pnpm with-env drizzle-kit studio",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@vercel/postgres": "0.9.0",
    "drizzle-orm": "0.31.2",
    "drizzle-zod": "0.5.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@sovoli/eslint-config": "workspace:*",
    "@sovoli/typescript-config": "workspace:*",
    "@sovoli/prettier-config": "workspace:*",
    "dotenv-cli": "7.4.2",
    "drizzle-kit": "0.22.8",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "tsx": "4.16.2"
  },
  "prettier": "@sovoli/prettier-config"
}
