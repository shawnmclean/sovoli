{
  "name": "@sovoli/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./trpc": {
      "types": "./dist/trpc/index.d.ts",
      "default": "./src/trpc/index.ts"
    },
    "./rest": {
      "types": "./dist/rest/index.d.ts",
      "default": "./src/rest/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@sovoli/db": "workspace:*",
    "@sovoli/services": "workspace:*",
    "@trpc/server": "11.0.0-rc.461",
    "@ts-rest/core": "catalog:",
    "@ts-rest/serverless": "catalog:",
    "superjson": "2.2.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@sovoli/eslint-config": "workspace:*",
    "@sovoli/typescript-config": "workspace:*",
    "eslint": "9.6.0",
    "prettier": "3.1.1",
    "typescript": "catalog:"
  }
}
