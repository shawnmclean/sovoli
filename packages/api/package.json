{
  "name": "@sovoli/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./trpc": {
      "types": "./dist/trpc/index.d.ts",
      "default": "./src/trpc/index.ts"
    },
    "./trigger": {
      "types": "./dist/trigger/index.d.ts",
      "default": "./src/trigger/index.ts"
    },
    "./tsr": {
      "types": "./dist/tsr/index.d.ts",
      "default": "./src/tsr/index.ts"
    },
    "./tsr/contract": {
      "types": "./dist/tsr/contract.d.ts",
      "default": "./src/tsr/contract.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@sovoli/db": "workspace:*",
    "@sovoli/services": "workspace:*",
    "@trigger.dev/sdk": "3.0.0-beta.52",
    "@trpc/server": "catalog:",
    "@ts-rest/core": "catalog:",
    "@ts-rest/serverless": "catalog:",
    "superjson": "2.2.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@sovoli/eslint-config": "workspace:*",
    "@sovoli/typescript-config": "workspace:*",
    "@sovoli/prettier-config": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@sovoli/prettier-config"
}
