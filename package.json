{
  "name": "@sovoli/root",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "mobile:update": "turbo run update --filter=@sovoli/mobile",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "prettier": "3.1.1",
    "turbo": "2.0.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "typescript"
      ]
    }
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.4.0"
}
