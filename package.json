{
  "name": "@sovoli/root",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prisma": {
    "schema": "apps/sovoli.com/prisma/schema.prisma",
    "seed": "tsx apps/sovoli.com/prisma/seed.ts"
  },
  "scripts": {
    "build": "turbo run build --cache-dir=.turbo",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:migrate:dev": "npm run --workspace @sovoli/sovoli.com db:migrate:dev",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed --no-cache",
    "db:migrate:force": "turbo run db:migrate:force --no-cache",
    "dev": "turbo run dev --parallel",
    "storybook": "turbo run storybook",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate": "turbo run generate",
    "lint": "turbo run lint",
    "docker:db": "docker compose -f docker-compose.yml up -d",
    "docker:build": "turbo run docker:build",
    "docker:build:sovoli.com": "docker build -t sovoli.com -f ./apps/sovoli.com/Dockerfile .",
    "docker:run:sovoli.com": "docker run -it --init --rm -p 3000:3000 --env-file .env.docker --env DATABASE_URL=\"postgresql://postgres:postgres@db:5432/postgres\" --network=app_network sovoli.com",
    "test": "turbo run test",
    "test:dev": "turbo run test:dev",
    "start-sovoli.com-production": "npm run --workspace @sovoli/sovoli.com start",
    "start": "turbo run start",
    "clean": "turbo run clean",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "typecheck": "turbo run typecheck",
    "test:e2e:dev": "turbo run test:e2e:dev",
    "test:e2e:ci": "turbo run test:e2e:ci",
    "setup": "pnpm run db:migrate:dev && turbo run db:migrate:force db:seed build",
    "validate": "turbo run lint typecheck test"
  },
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@turbo/gen": "^2.0.3",
    "@types/glob": "8.1.0",
    "glob": "^10.4.1",
    "json5": "^2.2.3",
    "magicast": "^0.3.4",
    "replace-in-file": "^7.2.0"
  },
  "devDependencies": {
    "prettier": "^3.3.1",
    "turbo": "^2.0.3",
    "typescript": "^5.4.5"
  },
  "packageManager": "npm@10.5.0"
}
