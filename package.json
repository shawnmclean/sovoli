{
  "name": "@sovoli/root",
  "private": true,
  "packageManager": "pnpm@9.1.4",
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo dev --parallel",
    "storybook": "turbo run storybook",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "docker:db": "docker compose -f docker-compose.yml up -d",
    "docker:build": "turbo run docker:build",
    "docker:build:sovoli.com": "docker build -t sovoli.com -f ./apps/sovoli.com/Dockerfile .",
    "docker:run:sovoli.com": "docker run -it --init --rm -p 3000:3000 --env-file .env.docker --env DATABASE_URL=\"postgresql://postgres:postgres@db:5432/postgres\" --network=app_network sovoli.com",
    "test": "turbo run test",
    "test:dev": "turbo run test:dev",
    "start": "turbo run start",
    "clean": "turbo run clean",
    "typecheck": "turbo run typecheck",
    "validate": "turbo run lint typecheck test"
  },
  "dependencies": {},
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
