{
  "name": "@sovoli/sovoli.com",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "db:migrate:deploy": "npx prisma migrate deploy",
    "db:migrate:dev": "npx prisma migrate dev",
    "docker:build": "cd ../.. & docker build -t sovoli.com -f ./apps/sovoli.com/Dockerfile .",
    "dev": "remix vite:dev",
    "start": "remix-serve ./build/server/index.js",
    "prisma:studio": "prisma studio",
    "format": "prettier --write .",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "generate": "prisma generate",
    "setup": "npm run build && npm run generate && prisma migrate deploy && prisma db seed && playwright install",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@remix-run/node": "*",
    "@remix-run/react": "*",
    "@remix-run/serve": "*",
    "isbot": "^5.1.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@remix-run/dev": "*",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@sovoli/eslint-config": "*",
    "eslint": "^8",
    "typescript": "^5.4.5",
    "vite": "^5.2.13",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "engines": {
    "node": "20"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
