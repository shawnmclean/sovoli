{
  "extends": "@sovoli/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["es2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@sovoli/ui/*": ["../../packages/ui/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "esnext"
  },
  "include": [
    "app-env.d.ts",
    "next-env.d.ts",
    "scripts/**/*",
    "src/**/*",
    "src/types/**/*.d.ts",
    "trigger.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
