{
  "extends": "@sovoli/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["es2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@sovoli/ui/*": ["../../packages/ui/src/*"]
    },
    "plugins": [{ "name": "next" }],
    "module": "esnext",
    "jsxImportSource": "nativewind",
    // Turning this on cus of jsxImportSource, when fixed, we can remove this
    "strictNullChecks": true
  },
  "include": [".", ".next/types/**/*.ts", "app-env.d.ts", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
