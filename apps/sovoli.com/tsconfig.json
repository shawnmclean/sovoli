{
  "extends": "@sovoli/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["es2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@sovoli/ui/*": ["../../packages/ui/src/*"],
      "@sovoli/api/*": ["../../packages/api/src/*"]
    },
    "plugins": [{ "name": "next" }],
    "module": "esnext"
  },
  "include": [
    "src/**/*",
    ".next/types/**/*.ts",
    "app-env.d.ts",
    "next-env.d.ts",
    "trigger.config.ts",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules"]
}
