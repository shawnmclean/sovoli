{
  "extends": "@sovoli/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@sovoli/ui/*": ["../../packages/ui/src/*"],
      "@sovoli/api/*": ["../../packages/api/src/*"]
    },
    "jsx": "react-native",
    "checkJs": false
  },
  "include": [
    "src",
    "*.ts",
    "*.js",
    "app-env.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
