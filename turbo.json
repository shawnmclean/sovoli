{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".expo/**", "public/dist/**"]
    },
    "start": {
      "dependsOn": ["^build"],
      "outputs": ["public/build/**"]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "docker:build": {
      "outputs": [],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": [".env", "tsconfig.json"],
  "globalEnv": [
    "NODE_ENV",
    "REMIX_APP_PORT",
    "FLY_REGION",
    "PRIMARY_REGION",
    "CI",
    "PORT",
    "MOCKS"
  ]
}
